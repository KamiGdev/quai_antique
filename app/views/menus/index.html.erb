<%= link_to 'Toute la carte', '/menus' %>
<%= link_to 'Entrées', '/menus?category=Entrée' %>
<%= link_to 'Plats', '/menus?category=Plat' %>
<%= link_to 'Desserts', '/menus?category=Dessert' %>
<%# JE N'ARRIVE PAS A TROUVER LE CODE  %>
<%= link_to 'Menus', '/menus?menu_only=true' %>

<% if @menus_only %>
  <%# Affichage Menus %>
  <div class="grid grid-cols-2 gap-6">
    <% @menus.each do |menu| %>
      <%= link_to "/menus/#{menu.id}" do %>
        <%= render partial: 'menu', locals: { menu: menu, show_details: false } %>
      <% end %>
    <% end %>
    <hr>
  </div>
<% else %>
  <% if !params[:category] %>
    <%# Affichage Menus %>
    <div class="grid grid-cols-2 gap-6">
      <% @menus.each do |menu| %>
        <%= link_to "/menus/#{menu.id}" do %>
          <%= render partial: 'menu', locals: { menu: menu, show_details: false } %>
        <% end %>
      <% end %>
      <hr>
    </div>
  <% end %>


<%# Sinon Plats tout seuls %>
  <div class="grid grid-cols-3 gap-6">
    <% @dishes.each do |dish| %>
      <div class="flex flex-col shadow rounded-xl overflow-hidden">
        <% if dish.illustration.attached? %>
          <%= image_tag url_for(dish.illustration), class: 'h-[250px] self-stretch bg-cover' %>
        <% end %>

        <div class="p-4">
          <p class="mt-4 font-bold text-2xl"><%= dish.title %>
            <% if dish.bestoff? %>
              <span>⭐</span>
            <% end %>
          </p>
          <p class="mt-4 font-bold text"><%= dish.subtitle %></p>
          <p class="mt-4 text self-end"><%= dish.price %></p>
        </div>

        <%# Show dish description on click %>
        <%# CODE POUR QUE CA MARCHE  %>
        <%#= dish.description %>


      </div>
    <% end %>
  </div>

<% end %>


