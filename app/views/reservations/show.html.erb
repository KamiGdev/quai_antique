<div class="bg-clearbrown mx-auto flex my-12 border border-slate rounded-xl w-[80vw] md:w-[40vw] lg:w-[30vw]">
  <div class="mx-auto">
    <%= render @reservation %>

    <div class="flex flex-col" w-full>
      <div class="<%= current_user ? 'w-1/2 translate-x-1/2 mt-2 mb-2 rounded-lg py-3 bg-gray-100 inline-block font-medium' : 'mt-2 mb-8 py-3 px-3 rounded-lg  bg-gray-100 inline-block font-medium'%>">
        <%= link_to t('global.forms.reservations.show.edit_this_reservation'), edit_reservation_path(@reservation) %>
      </div>

      <% if current_user %>
        <%= button_to t('global.forms.reservations.show.destroy_this_reservation'), reservation_path(@reservation), method: :delete, class: "w-1/2 translate-x-1/2 mt-2 mb-2 rounded-lg py-3 bg-gray-100 font-medium bg-red-200" %>
        <%= link_to t('global.forms.reservations.show.back_to_reservations'), reservations_path, class: "w-1/2 translate-x-1/2 mb-8 rounded-lg py-3 bg-gray-100 inline-block font-medium mt-2" %>
      <% end %>
    </div>

  </div>
</div>
