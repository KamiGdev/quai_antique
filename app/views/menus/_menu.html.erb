<div class="my-4 p-6 <% show_details ? '' : 'border border-clearbrown shadow rounded-2xl' %> flex flex-col">
  <% if menu.illustration.attached? %>
    <%= image_tag url_for(menu.illustration), class: 'rounded-xl h-[250px] self-center object-cover mb-2' %>
  <% end %>
  <h1 class="font-DancingScript text-2xl mt-2"><%= menu.title %>
    <% if menu.bestoff? %>
      <span>⭐</span>
    <% end %>
  </h1>

  <%= menu.subtitle %>
  <br>
  <p class="text-white"><%= menu.price.to_i %> €</p>
  <br>

  <% if show_details %>
    <p class="mt-2"><%= menu.description %></p>
    <% menu.dishes.distinct.pluck(:category) %>
    <% Dish.where(category: 'Entrée').each do |d| %>
    <% end %>

    <b class="font-DancingScript mt-4">** Entrées **</b>
    <ul>
      <% menu.dishes.where(category: 'Entrée').each do |d| %>
        <li><%= d.title %></li>
      <% end %>
    </ul>

    <hr class="my-2">

    <b class="font-DancingScript">** Plats **</b>
    <ul>
      <% menu.dishes.where(category: 'Plat').each do |d| %>
        <li><%= d.title %></li>
      <% end %>
    </ul>

    <hr class="my-2">

    <b class="font-DancingScript">** Desserts **</b>
    <ul>
      <% menu.dishes.where(category: 'Dessert').each do |d| %>
        <li><%= d.title %></li>
      <% end %>
    </ul>
  <% end %>
</div>