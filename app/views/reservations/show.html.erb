<div class="bg-clearbrown mx-auto flex my-12 border border-slate rounded-xl w-[80vw] md:w-[40vw] lg:w-[30vw]">
  <div class="mx-auto">
    <%= render @reservation %>

    <div class="flex flex-col" w-full>
      <%= link_to 'Edit this reservation', edit_reservation_path(@reservation), class: "w-1/2 translate-x-1/2 mt-2 mb-2 rounded-lg py-3 bg-gray-100 inline-block font-medium" %>

      <% if current_user %>
        <%= button_to 'Destroy this reservation', reservation_path(@reservation), method: :delete, class: "w-1/2 translate-x-1/2 mt-2 mb-2 rounded-lg py-3 bg-gray-100 font-medium bg-red-200" %>
        <%= link_to 'Back to reservations', reservations_path, class: "w-1/2 translate-x-1/2 mb-8 rounded-lg py-3 bg-gray-100 inline-block font-medium mt-2" %>
      <% end %>
    </div>

  </div>
</div>
