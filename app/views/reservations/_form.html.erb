<%= form_with(model: reservation, class: "contents") do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, required: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= label_tag :date, 'Selectionnez une date' %>
  <%= date_field_tag :date, reservation.slot ? reservation.slot.date : @date, onchange: 'onChange(event)' %>

  <%# Si je suis en mode edition %>
  <% if reservation.slot %>
    <h3>Heure initiale: <%= reservation.slot.time.strftime("%H:%M") %></h3>
  <% end %>

  <%= render partial: 'slots' %>


  <div class="my-5">
    <%= form.label :people_number %>
    <%= form.number_field :people_number, required: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :allergy %>
    <%= form.text_field :allergy, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>



<script type="text/javascript" charset="utf-8">
    function onChange(event) {
        const value = event.target.value
        fetch('/reservations/refresh_date?date=' + value)
            .then(res => res.text())
            .then(html => Turbo.renderStreamMessage(html))
    }
</script>